<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.twinster.socialnetwork.SettingsActivity"
    android:background="@color/colorAccent"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="@dimen/circleimg_size"
        android:layout_height="@dimen/circleimg_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_top"
        android:src="@drawable/defaultpic" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="@string/display_name"
        android:textSize="@dimen/cna_text_size"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top"
        />

    <Button
        android:id="@+id/btChangeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:text="@string/change_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/bt_side_margin"
        android:layout_marginStart="@dimen/bt_side_margin"
        android:layout_marginTop="@dimen/margin_top"
        android:background="@color/colorPrimaryDark"
        />


</RelativeLayout>
