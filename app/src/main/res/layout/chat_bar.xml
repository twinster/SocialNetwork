<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorAccent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_toolbar_iamge"
            android:layout_width="@dimen/chatbar_topimage_width"
            android:layout_height="@dimen/chatbar_topimage_height"
            android:src="@drawable/defaultpic"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/chatbar_topimage_marginend"/>

        <TextView
            android:id="@+id/chat_toolbar_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/display_name_textsize"
            android:text="@string/display_name"/>

        <TextView
            android:id="@+id/chat_toolbar_userslasteen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/lastseen_textsize"
            android:text="@string/last_seen"
            android:layout_below="@id/chat_toolbar_username"/>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>